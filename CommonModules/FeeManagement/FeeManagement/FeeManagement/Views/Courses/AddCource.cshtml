<div class="container">
    <div class="card" style="top: 20px; background-color:gainsboro;margin-left: 180px; margin-top:175px;width:980px">
        <div class="card-body">
            <h5 class="card-title">Student Info </h5>
            <form action="/Courses/Courcesubmitquery" method="post" role="form" class="php-email-form" asp-antiforgery="true">
                @Html.AntiForgeryToken()
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCname">Course Name<span style="color:red">*</span></label>
                        <input name="inputCname" type="text" class="form-control" id="inputCname" placeholder="Enter Course Name" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCcost">Course Fee<span style="color:red">*</span></label>
                        <input name="inputCcost" type="text" class="form-control" id="inputCcost" placeholder="Enter Course Fee" required>
                    </div>
                </div>
                <br />

                <div class="form-row">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div style="margin-top: 40px"></div>
</div>